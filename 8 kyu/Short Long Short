/* Given 2 strings, a and b, return a string of the form short+long+short, with the shorter string on the outside and the longer string on the inside. 
The strings will not be the same length, but they may be empty ( zero length ).*/




//We create two variables to hold the length of each input 
//We create a main condition and then the else to handle the other case 
//The empty string or letter casing had no effect on the solution 



const solution = (str1, str2) => {
  
  const firstLength = str1.length;
  
  const secondLength = str2.length;
  
  if (firstLength > secondLength){
    return str2 + str1 + str2;
  } else {
    return str1 + str2 + str1;
  }
}
