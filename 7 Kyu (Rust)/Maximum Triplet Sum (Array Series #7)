Given an array/list [] of n integers , find maximum triplet sum in the array Without duplications .

// We can solve this by using BTreeSet to remove duplicates and sort the array. 

use std::collections::BTreeSet;

fn max_tri_sum(arr: &[i32]) -> i32 {

    let mut sorted_arr: Vec<i32> = BTreeSet::from_iter(arr.to_vec()).into_iter().collect();  // Create a vector of i32s from the arr slice, insert into BTreeSet, collect back into Vec<i32> 
    
    sorted_arr[sorted_arr.len() - 3..].iter().sum()   // Get the sum of the last three elements (they will be the max sum).

}
