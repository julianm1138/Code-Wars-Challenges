Given a number, Find if it is Jumping or not .

// All single digits are automatically jumping numbers. 
// starting from the second digit, loop through each digit and check if it is consecutive by subtracting or adding 1. "23" -> 3 - 1 || 3 + 1 == 2? True. Therefore it is a jumping number. 
// Else not a jumping number. 





fn jumping_number(n: u64) -> String {

    let digits = n.to_string();
    
    if digits.len() < 2 {
        return "Jumping!!".to_string();
    };
    
    let mut prev = digits.chars().next().unwrap();      // keep track of prev manually, use next to get the first char
     
    for num in digits.chars().skip(1) {                 // start the loop at the second char
        
        let num_val = num.to_digit(10).unwrap();
        let prev_val = prev.to_digit(10).unwrap();
        if num_val + 1 == prev_val || (num_val > 0 && num_val - 1 == prev_val) {      // prevent underflow
            prev = num;
        } else {
            return "Not!!".to_string();
        };
        
    }
    "Jumping!!".to_string()
}
