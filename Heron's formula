


// We simply need to write Heron's formula. 



fn heron(a: u32, b: u32, c: u32) -> f64 {

    let (a, b, c) = (a as f64, b as f64, c as f64);       // cast inputs to f64 to keep precision before truncation 
 
    let s = ((a + b + c) / 2.0);                         // find s
    
    ((s * (s - a as f64) * (s - b as f64) * (s - c as f64)).sqrt()) as f64    // Heron's formula is the square root of s * (s - a) * (s - b) * (s - c)

}
